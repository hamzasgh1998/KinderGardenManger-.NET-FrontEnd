@model IEnumerable<PI4SAE.Models.Events>

@{
    ViewBag.Title = "IndexVisiteur";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>Index</h2>
@using (Html.BeginForm())
{<table>
        <tr>
            <td>
                <div>
                    Search for an event: @Html.TextBox("filtre")
                </div>
            </td>
            <td> <input  class="btn btn-primary btn-block border-0 py-3" type="submit" value="Search" id="submit" /> </td>
        </tr>
    </table>}
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("SendMail", "SendMail")


</p>
<div class="container-fluid pt-5">
    <div class="container pb-3">
        <div class="text-center pb-2">
            <p class="section-title px-5"><span class="px-2">Popular Classes</span></p>
            <h1 class="mb-4">Classes for Your Kids</h1>
        </div>

        <div class="row">

            @foreach (var item in Model)
            {


                <div class="col-lg-4 mb-5">
                    <div class="card border-0 bg-light shadow-sm pb-2">
                        <td>
                            @{string path = "~/Content/Upload/" + @item.image;}

                            <img class="card-img-top mb-2" src="@Url.Content(path)" width="150" height="150" />
                        </td>

                        <div class="card-body text-center">
                            <h4 class="card-title">
                                @Html.DisplayFor(modelItem => item.nameEvent)
                            </h4>
                            <p class="card-text"></p>
                        </div>
                        <div>

                        </div>
                      


                        <div class="card-footer bg-transparent py-4 px-5">
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right"><strong>@Html.DisplayNameFor(model => model.typeEvent)</strong></div>
                                <div class="col-6 py-1">
                                    @Html.DisplayFor(modelItem => item.typeEvent)
                                </div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right"><strong>    @Html.DisplayNameFor(model => model.dateEvent) </strong></div>
                                <div class="col-6 py-1">
                                    @Html.DisplayFor(modelItem => item.dateEvent2)
                                </div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right"><strong> @Html.DisplayNameFor(model => model.capacityEvent) </strong></div>
                                <div class="col-6 py-1"> @Html.DisplayFor(modelItem => item.capacityEvent)</div>
                            </div>
                            <div class="row border-bottom">
                                <div class="col-6 py-1 text-right border-right"><strong>@Html.DisplayNameFor(model => model.KinderGarten.idKinderGarten) </strong></div>
                                <div class="col-6 py-1">                      @Html.DisplayFor(modelItem => item.KinderGarten.nameKinderGarten)                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 py-1 text-right border-right"><strong> @Html.DisplayNameFor(model => model.priceEvent) </strong></div>
                                <div class="col-6 py-1">    @Html.DisplayFor(modelItem => item.priceEvent) Dt </div>
                            </div>
                        </div>


                    </div>
                    @Html.ActionLink("Details", "Details", new { id = item.idEvent }) |
            


                </div>



            }
        </div>
    </div>
</div>

            </table>



